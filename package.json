{
  "name": "line-below",
  "version": "1.0.0",
  "description": "Purely functional typescript utils",
  "main": "index.js",
  "author": "Tyler Hoffman <tyler.c.hoffman@gmail.com>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "test": "jest -w=4",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch o",
    "lint": "tslint 'src/**/*.ts*'",
    "lint:fix": "tslint 'src/**/*.ts*' --fix"
  },
  "jest": {
    "transform": {
      ".ts": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "verbose": true,
    "testRegex": "/test/.*\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "js",
      "tsx",
      "json"
    ]
  },
  "devDependencies": {
    "@types/jest": "^22.0.1",
    "jest": "^22.1.1",
    "ts-jest": "^22.0.1",
    "tslint": "^5.9.1",
    "typescript": "^2.6.2"
  }
}
